---
import Sparkle from "../components/Sparkle.astro";
---

<section>
  <h1>Projects</h1>

  <ul>
    <li>
      <h2>Project 1: De Hallen</h2>
    </li>
    <li>
      <h2>Project 2: Merlin Studios</h2>
    </li>
    <li>
      <h2>Project 3: Red Pers</h2>
    </li>
    <li>
      <h2>Project 4: WoGo</h2>
    </li>
    <li>
      <h2>Project 5: Drop & Heal</h2>
      <div class="flower">
        <Sparkle />
      </div>
    </li>
    <li>
      <h2>Project 6: Leidensportzomer</h2>
    </li>
  </ul>
</section>

<style>
  section {
    height: 100vh;
    background-color: var(--main-color-1);
  }

  h1 {
    padding-top: 0.3em;
    font-size: clamp(2rem, 7vw + 2rem, 10rem);
    text-align: center;
  }

  h2 {
    animation: zoom-on-scroll linear both;
    animation-range: 0% 50%;
    animation-timeline: view(inline);
    font-family: var(--regular-font);
  }

  p {
    padding-top: 0.2em;
    color: var(--main-color-1);
    font-family: var(--regular-font);
    font-size: 10px;
    animation: foo linear both;
    animation-range: 0% 50%;
    animation-timeline: view(inline);
  }

  ul {
    anchor-name: --myCarousel;
    margin-top: 2em;
    width: 100vw;
    max-width: 100%;
    display: flex;
    justify-content: start;
    height: 300px;
    padding: 20px;
    display: flex;
    gap: 3vw;
    scrollbar-width: none;
    overflow-x: scroll;
    scroll-snap-type: x mandatory;
    scroll-marker-group: after;
  }

  ul::scroll-marker-group {
    position: absolute;
    position-anchor: --myCarousel;
    top: calc(anchor(bottom) - 0px);
    justify-self: anchor-center;

    display: flex;
    justify-content: center;
    gap: 20px;
  }

  li {
    list-style-type: none;
    padding: 20px;
    width: 100%;
    scroll-snap-align: center;
    flex: 0 0 40%;
    box-shadow: 2px 2px 2px black;
    border-radius: 12px;
  }

  li::scroll-marker {
    content: "";
    width: 16px;
    height: 16px;
    background-color: transparent;
    border: 2px solid black;
    border-radius: 50%;
  }

  li::scroll-marker:target-current {
    background-color: black;
  }

  li:nth-child(even) {
    background-color: var(--main-color-2);
    color: var(--main-color-1);
  }

  li:nth-child(odd) {
    background-color: var(--main-color-1);
    color: var(--main-color-2);
    border: 1px solid var(--main-color-2);
  }

  ul::scroll-button(*) {
    position: absolute;
    position-anchor: --myCarousel;
    border: 0;
    font-size: 2rem;
    background: none;
    color: rgb(0 0 0 / 0.7);
    cursor: pointer;
  }

  ul::scroll-button(left) {
    right: calc(anchor(left) - 70px);
    bottom: calc(anchor(top) + 13px);
    content: "◄";
  }

  ul::scroll-button(right) {
    left: calc(anchor(right) - 70px);
    bottom: calc(anchor(top) + 13px);
    content: "►";
  }

  ul::scroll-button(*):hover,
  ul::scroll-button(*):focus {
    color: rgb(0 0 0 / 1);
  }

  ul::scroll-button(*):active {
    translate: 1px 1px;
  }

  ul::scroll-button(*):disabled {
    color: rgb(0 0 0 / 0.2);
    cursor: unset;
  }

  .flower {
    margin-top: 2em;
    animation: grow linear both;
    animation-range: 0% 50%;
    animation-timeline: view(inline);
  }

  @keyframes zoom-on-scroll {
    from {
      font-size: 16px;
    }
    to {
      font-size: 32px;
    }
  }

  @keyframes grow {
    from {
      transform: scale(0.5);
    }
    to {
      transform: scale(1);
    }
  }
</style>
